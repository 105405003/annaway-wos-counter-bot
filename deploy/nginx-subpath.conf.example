# Nginx 子路徑配置範例
# /tools/wos/refill-bot/ 反向代理設定
#
# 安裝方式：
# 1. sudo cp deploy/nginx-subpath.conf.example /etc/nginx/sites-available/refill-bot
# 2. 修改 server_name 和路徑
# 3. sudo ln -s /etc/nginx/sites-available/refill-bot /etc/nginx/sites-enabled/
# 4. sudo nginx -t
# 5. sudo systemctl reload nginx

server {
    listen 80;
    server_name yoursite.com;  # 修改為你的域名
    
    # 可選：自動重定向到 HTTPS
    # return 301 https://$server_name$request_uri;
    
    # ============================================
    # 前端靜態文件
    # ============================================
    location /tools/wos/refill-bot/ {
        alias /var/www/refill-bot/;
        try_files $uri $uri/ /tools/wos/refill-bot/index.html;
        
        # 靜態資源快取
        location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
            expires 1y;
            add_header Cache-Control "public, immutable";
        }
        
        # 防止快取 index.html（確保更新後能立即生效）
        location = /tools/wos/refill-bot/index.html {
            add_header Cache-Control "no-cache, no-store, must-revalidate";
            add_header Pragma "no-cache";
            add_header Expires "0";
        }
    }
    
    # ============================================
    # API 反向代理
    # ============================================
    location /tools/wos/refill-bot/api/ {
        # 後端服務地址
        proxy_pass http://127.0.0.1:8000/tools/wos/refill-bot/api/;
        
        # 基本 HTTP 標頭
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # 超時設定
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        # 緩衝設定
        proxy_buffering off;
        proxy_request_buffering off;
    }
    
    # ============================================
    # WebSocket 代理
    # ============================================
    location /tools/wos/refill-bot/ws {
        # 後端 WebSocket 地址
        proxy_pass http://127.0.0.1:8000/tools/wos/refill-bot/ws;
        
        # WebSocket 必要標頭
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # 基本標頭
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket 超時（設定較長時間）
        proxy_connect_timeout 7d;
        proxy_send_timeout 7d;
        proxy_read_timeout 7d;
        
        # 關閉緩衝（WebSocket 需要）
        proxy_buffering off;
    }
}

# ============================================
